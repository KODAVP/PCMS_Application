@model PrivacyConsentDB.Models.Setting

@{
    ViewBag.Title = "Edit";
}

<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>시스템 설정 <small></small></h2>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <div class="row">
                    <div class="col-md-offset-1 col-md-10">

                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()

                            <div class="form-horizontal">
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                @Html.HiddenFor(model => model.ID)
                                @Html.HiddenFor(model => model.type)
                                @Html.HiddenFor(model => model.name)
                                @Html.HiddenFor(model => model.COMP_CODE)

                                <div class="form-group">
                                    <label class="control-label col-md-4" for="value">@Html.DisplayFor(model => model.name)</label>
                                    <div class="col-md-6 input-group-sm">
                                        @{
                                            string ph = "ABC";

                                            switch (Model.type)
                                            {
                                                case PrivacyConsentDB.Commons.Status.SettingType.NotificationEmail:
                                                    ph = "ex: KIMD53;CHOIY28;";
                                                    break;
                                                case PrivacyConsentDB.Commons.Status.SettingType.ConsentTerm:
                                                    ph = "2년 세팅하는 경우 2를 입력해주세요.";
                                                    break;
                                                case PrivacyConsentDB.Commons.Status.SettingType.ConsentExpiredAlert:
                                                    ph = "15일 전 알람을 원하는 경우 15를 입력해주세요.";
                                                    break;
                                                case PrivacyConsentDB.Commons.Status.SettingType.PfizerLinkAlert:
                                                    ph = "ex: KIMD53;CHOIY28;";
                                                    break;
                                                case PrivacyConsentDB.Commons.Status.SettingType.ExpiredBatch:
                                                    ph = "Y 또는 N 입력";
                                                    break;
                                                case PrivacyConsentDB.Commons.Status.SettingType.RemoveBatch:
                                                    ph = "Y 또는 N 입력";
                                                    break;
                                                case PrivacyConsentDB.Commons.Status.SettingType.InterfaceAlertMail:
                                                    ph = "ex: Do-Hun.Kim@pfizer.com;email@address.com";
                                                    break;

                                            }
                                        }
                                        @Html.EditorFor(model => model.value, new { htmlAttributes = new { @class = "form-control", placeholder = ph } })
                                        @ph
                                        @Html.ValidationMessageFor(model => model.value, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <br />
                                <div class="form-group">
                                    <div class="col-md-offset-2 col-md-10 text-right">
                                        <input type="submit" value="저장" class="btn btn-sm btn-primary" />
                                        <a href="/Settings/Index" name="" class="btn btn-sm btn-default">취소</a>
                                    </div>
                                </div>
                            </div>
                                            }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
